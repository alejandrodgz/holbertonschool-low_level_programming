#include <stdio.h>
#include <stdlib.h>
#include <string.h>

/**
 * malloc_checked - allocates memory
 *
 * @b: size to be allocated
 * Return: 98
 */

void *malloc_checked(unsigned int b)
{
	void *a;

	if (sizeof(b) != sizeof(unsigned int))
	{
		exit(98);
	}
	a = malloc(b);
	if (!a)
	{
		exit(98);
	}
	return (a);
}
