#include "main.h"
#include <stdio.h>
#include <string.h>

/**
 * _strchr - fills memory with a constant byte
 *
 * @s: what to fill
 * @c: number of bytes to fill
 *
 * Return: pointer to the memory area
 */

char *_strchr(char *s, char c)
{
	unsigned int i, j = 0;

	for (i = 0; s[i] != '\0'; i++)
	{
		if (c == s[i])
		{
			return (s);
		}
		else
		{
			return (0);
		}
	}
}
